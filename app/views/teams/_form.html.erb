<div id ="main">
  <div class="row-fluid">
    <div class="span10">
      <div class="box box-color box-bordered">
        <div class="box-title">
          <h3>
            <i class="icon-user"></i>
            团队信息填写
          </h3>
        </div>
        <div class="box-content nopadding">
          <ul class="tabs tabs-inline tabs-top">
            <li class='active'>
            <a href="#profile" data-toggle='tab'><i class="icon-user"></i>团队信息</a>
            </li>
            <li>
          </ul>
          <div class="tab-content padding tab-content-inline tab-content-bottom">
            <div class="tab-pane active" id="profile">
              <%= form_for(@team, :remote => true) do |f| %>
                <div class="row-fluid">
                <div class="span2">
                </div>
                <div class="span10">
                  <div class="control-group">
                    <label for="name" class="control-label right">团队名字(注册不可更改):</label>
                    <div class="controls">
                      <%= f.text_field :name, :class => 'input-middle'%>
                    </div>
                  </div>
                  <div class="form-actions">
                    <input type="submit" class='btn btn-primary' value="确定并新增队员">
                  </div>
                </div>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

