
<div id= 'main'>
  <div class="row-fluid ">
    <div class="span8">
      <div class="box box-color box-bordered">

        <div class="box-title">
          <h3>
            <i class="icon-table"></i>
            比赛成绩
          </h3>
        </div>
        <div class="box-content nopadding ">
          <div class="form-horizontal form-column form-bordered">
            <div class="control-group">
              <label for="name" class="control-label right">冠军团队:</label>
              <div class="controls">
                <h4><%= link_to @champion.name,team_path(@champion.id)%></h4><br/><hr/>
                团队成员: <br/><br/>
                <% @champion_registration.each do |champion_registration|%>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%='队长:  ' if champion_registration.is_leader %>
                  &nbsp;&nbsp;<%= champion_registration.name %> <br/><hr/>
                <%end%>
              </div>
            </div>

            <div class="control-group">
              <label for="name" class="control-label right">亚军团队:</label>
              <div class="controls">
                <h4><%= link_to @the_second.name,team_path(@the_second.id)%></h4><br/><hr/>
                团队成员: <br/><br/>
                <% @the_second_registration.each do |the_second_registration|%>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%='队长:  ' if the_second_registration.is_leader %>
                  &nbsp;&nbsp;<%= the_second_registration.name %> <br/><hr/>
                <%end%>
              </div>
            </div>

            <div class="control-group">
              <label for="country" class="control-label right">季军团队:</label>
              <div class="controls">
                <h4><%= link_to @the_third.name,team_path(@the_third.id)%></h4><br/><hr/>
                团队成员: <br/><br/>
                <% @the_third_registration.each do |the_third_registration|%>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%='队长:  ' if the_third_registration.is_leader %>
                  &nbsp;&nbsp;<%= the_third_registration.name %> <br/><hr/>
                <%end%>
              </div>
            </div>

            <div class="form-actions">
              <%= link_to '返回', teams_path(audit: '0'), :class => 'btn btn' %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
