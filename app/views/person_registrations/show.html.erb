
<div id= 'main'>
  <div class="row-fluid ">
    <div class="span8">
      <div class="box box-color box-bordered">

        <div class="box-title">
          <h3>
            <i class="icon-table"></i>
            <%=@person_registration.name%>选手个人信息
          </h3>
        </div>
        <div class="box-content nopadding ">
          <div class="form-horizontal form-column form-bordered">
            <div class="control-group">
              <label for="name" class="control-label right">姓名:</label>
              <div class="controls">
                <%= @person_registration.name%>
              </div>
            </div>
            <div class="control-group">
              <label for="name" class="control-label right">参赛码:</label>
              <div class="controls">
                <%= @person_registration.number%>
              </div>
            </div>
            <div class="control-group">
              <label for="country" class="control-label right">年龄:</label>
              <div class="controls">
                <%= @person_registration.age%>
              </div>
            </div>
            <div class="control-group">
              <label for="name" class="control-label right">性别:</label>
              <div class="controls">
                <%= @person_registration.sex%> 男
              </div>
            </div>
            <div class="control-group">
              <label for="xemail" class="control-label right">Email:</label>
              <div class="controls">
                <%= @person_registration.email%>
              </div>
            </div>
            <div class="control-group">
              <label for="pw" class="control-label right">电话:</label>
              <div class="controls">
                <div class="form-button">
                  <%= @person_registration.phone%>
                </div>
              </div>
            </div>

            <div class="control-group">
              <label for="pw" class="control-label right">地址:</label>
              <div class="controls">
                <div class="form-button">
                  <%= @person_registration.address%>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <%= link_to '返回', person_registrations_path(audit: '1'), :class => 'btn btn' %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
